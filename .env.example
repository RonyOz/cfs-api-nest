# Application
PORT=3000
NODE_ENV=development

# PostgreSQL (used by TypeORM config in src/config/typeorm.config.ts)
DB_HOST=ESTE_NO_ES_
DB_PORT=ESTE_NO_ES_
DB_USER=ESTE_NO_ES_
DB_PASS=ESTE_NO_ES_
DB_NAME=ESTE_NO_ES_

# Unicamente para produccion
# DATABASE_URL=<URL_de_tu_base_de_datos>

# JWT secret 
JWT_SECRET=ESTE_NO_ES_

# TypeORM / runtime toggles
# Set to true only for local development. In production use migrations instead.
TYPEORM_SYNCHRONIZE=false

# Optional: connection string alternative
# DATABASE_URL=postgres://postgres:postgres@localhost:5432/cfs_dev

# Test DB (recommended to override in CI to use sqlite in-memory or a test Postgres)
# Example for sqlite in-memory (adjust your test setup to read these vars):
# TEST_DB_TYPE=sqlite
# TEST_DB_NAME=:memory:
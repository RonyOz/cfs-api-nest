{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": "..",
  "testEnvironment": "node",
  "testMatch": [
    "**/test/integration/**/*.spec.ts"
  ],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "testPathIgnorePatterns": [
    "/node_modules/",
    "/src/",
    "/test/unit/"
  ],
  "collectCoverageFrom": [
    "src/**/*.(t|j)s",
    "!src/main.ts",
    "!src/**/*.module.ts",
    "!src/**/*.entity.ts",
    "!src/**/*.dto.ts",
    "!src/seeds/**"
  ],
  "coverageDirectory": "./coverage-e2e",
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/src/$1"
  }
}